{
  "name": "koa-api-starter",
  "version": "2.3.0",
  "description": "Koa api",
  "private": false,
  "main": "src/app.js",
  "author": "Paralect",
  "license": "MIT",
  "keywords": [
    "koa",
    "rest api",
    "paralect"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paralect/koa-api-starter.git"
  },
  "scripts": {
    "build-assets": "mjml ./src/assets/emails/*.mjml -o ./src/assets/emails/dist/",
    "dev": "nodemon --watch src src/app.js",
    "start": "node src/app.js",
    "migrate": "node ./src/migrator.js",
    "schedule-dev": "nodemon --watch ./src ./src/scheduler ./src/scheduler.js",
    "schedule": "node ./src/scheduler.js",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@koa/cors": "3.1.0",
    "@koa/multer": "3.0.0",
    "@koa/router": "10.0.0",
    "@paralect/node-mongo": "2.1.1",
    "@sendgrid/mail": "7.6.0",
    "app-module-path": "2.2.0",
    "aws-sdk": "2.976.0",
    "bcryptjs": "2.4.3",
    "handlebars": "4.7.7",
    "joi": "17.4.0",
    "koa": "2.13.1",
    "koa-bodyparser": "4.3.0",
    "koa-helmet": "6.1.0",
    "koa-logger": "3.2.1",
    "koa-mount": "4.0.0",
    "koa-qs": "3.0.0",
    "lodash": "4.17.21",
    "mjml": "4.11.0",
    "moment": "2.29.1",
    "moment-duration-format": "2.3.2",
    "multer": "1.4.3",
    "node-schedule": "2.0.0",
    "nodemon": "2.0.7",
    "psl": "1.8.0",
    "redis": "3.1.2",
    "socket.io": "4.4.0",
    "socket.io-emitter": "3.2.0",
    "socket.io-redis": "6.1.0",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "eslint": "7.25.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.22.1",
    "husky": "6.0.0",
    "lint-staged": "10.5.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
