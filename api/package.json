{
  "name": "koa-api-starter",
  "version": "2.3.0",
  "description": "Koa api",
  "private": false,
  "main": "src/app.js",
  "author": "Paralect",
  "license": "MIT",
  "keywords": [
    "koa",
    "rest api",
    "paralect"
  ],
  "scripts": {
    "build": "run-s build:**",
    "build:email": "mjml ./src/assets/emails/*.mjml -o ./src/assets/emails/dist/",
    "prestart": "npm run build",
    "start": "node src/app.js",
    "test": "run-s test:**",
    "test:eslint": "eslint ./src",
    "test:mocha": "NODE_ENV=test mocha --timeout 20000 --recursive --exit -c -R spec 'src/**/*.spec.js'",
    "development": "NODE_ENV=development nodemon --watch src src/app.js",
    "format": "prettier-eslint --write \"src/**/*.js\""
  },
  "dependencies": {
    "@paralect/common-logger": "0.1.10",
    "@paralect/email-service": "0.2.0",
    "@paralect/node-mongo": "1.1.0",
    "app-module-path": "2.2.0",
    "bcrypt": "3.0.6",
    "google-auth-library": "4.2.5",
    "joi": "14.3.1",
    "jsonwebtoken": "8.5.1",
    "kcors": "2.2.2",
    "koa": "2.7.0",
    "koa-bodyparser": "4.2.1",
    "koa-helmet": "4.2.0",
    "koa-jwt": "3.6.0",
    "koa-logger": "3.2.1",
    "koa-mount": "4.0.0",
    "koa-passport": "4.1.3",
    "koa-router": "7.4.0",
    "koa-validate": "1.0.7",
    "lodash": "4.17.14",
    "nodemon": "1.19.1",
    "passport-facebook": "3.0.0"
  },
  "devDependencies": {
    "@paralect/eslint-config": "1.1.0",
    "babel-eslint": "10.0.2",
    "chai": "4.2.0",
    "eslint": "6.0.1",
    "eslint-plugin-import": "2.18.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.14.2",
    "faker": "4.1.0",
    "mjml": "4.4.0-beta.2",
    "mocha": "6.1.4",
    "npm-run-all": "4.1.5",
    "prettier-eslint-cli": "5.0.0",
    "supertest": "4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paralect/koa-api-starter.git"
  }
}
