{
  "name": "mailer",
  "version": "0.0.0",
  "description": "Ship Mailer based on React Email",
  "author": "Paralect",
  "license": "MIT",
  "main": "./src/index.tsx",
  "types": "./src/index.tsx",
  "scripts": {
    "dev": "email dev --port 3003",
    "export": "email export",
    "tsc": "tsc --noEmit --watch",
    "prettier": "prettier . --write --config .prettierrc.json",
    "eslint": "eslint . --fix",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@react-email/components": "0.0.36",
    "@react-email/render": "1.0.6",
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@types/node": "*",
    "@types/react": "*",
    "eslint": "*",
    "eslint-config-custom": "workspace:*",
    "lint-staged": "*",
    "prettier": "*",
    "prettier-config-custom": "workspace:*",
    "react-email": "4.0.7",
    "tsconfig": "workspace:*",
    "typescript": "*"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "bash -c 'tsc --noEmit'",
      "prettier --write"
    ],
    "!(*.ts|*.tsx)": [
      "prettier --write"
    ]
  }
}
