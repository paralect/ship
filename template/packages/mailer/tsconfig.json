{
  "include": ["src", "emails", "tsup.config.ts", "tailwind.config.js"],
  "exclude": [".react-email", "dist", "build", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "emails/*": ["./emails/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}
