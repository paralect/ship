{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node.js",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2022",

    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": true
  },
  "ts-node": { "transpileOnly": true }
}
