{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node.js",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2022",

    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": true
  }
}
