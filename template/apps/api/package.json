{
  "name": "api",
  "type": "module",
  "version": "1.0.0",
  "description": "Koa.js API",
  "author": "Paralect",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_ENV=development APP_ENV=development tsx watch --env-file=.env src/app.ts",
    "start": "tsx src/app.ts",
    "migrate-dev": "NODE_ENV=development APP_ENV=development tsx --env-file=.env src/migrator.ts",
    "migrate": "tsx src/migrator.ts",
    "schedule-dev": "NODE_ENV=development APP_ENV=development tsx watch --env-file=.env src/scheduler.ts",
    "schedule": "tsx src/scheduler.ts",
    "test:unit": "jest --runInBand -c ./jest.config.js --collectCoverage false",
    "tsc": "tsc --noEmit --watch",
    "prettier": "prettier . --write --config .prettierrc.json",
    "eslint": "eslint . --fix",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.828.0",
    "@aws-sdk/lib-storage": "3.828.0",
    "@aws-sdk/s3-request-presigner": "3.828.0",
    "@koa/cors": "5.0.0",
    "@koa/router": "13.1.0",
    "@node-rs/argon2": "2.0.2",
    "@oslojs/crypto": "1.0.1",
    "@oslojs/encoding": "1.1.0",
    "@paralect/node-mongo": "3.3.0",
    "@socket.io/redis-adapter": "8.3.0",
    "@socket.io/redis-emitter": "5.1.0",
    "app-constants": "workspace:*",
    "app-types": "workspace:*",
    "arctic": "3.7.0",
    "dayjs": "1.11.13",
    "ioredis": "5.6.1",
    "koa": "3.0.1",
    "koa-body": "6.0.1",
    "koa-compose": "4.1.0",
    "koa-helmet": "8.0.1",
    "koa-logger": "4.0.0",
    "koa-mount": "4.2.0",
    "koa-qs": "3.0.0",
    "koa-ratelimit": "6.0.0",
    "lodash": "4.17.21",
    "mailer": "workspace:*",
    "mixpanel": "0.18.1",
    "node-schedule": "2.1.1",
    "resend": "4.5.2",
    "schemas": "workspace:*",
    "socket.io": "4.8.1",
    "tldts": "7.0.8",
    "winston": "3.17.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "4.2.0",
    "@types/jest": "29.5.12",
    "@types/koa": "2.15.0",
    "@types/koa-compose": "3.2.8",
    "@types/koa-logger": "3.1.5",
    "@types/koa-mount": "4.0.5",
    "@types/koa-ratelimit": "5.0.0",
    "@types/koa__cors": "5.0.0",
    "@types/koa__router": "12.0.4",
    "@types/lodash": "4.17.17",
    "@types/node": "catalog:",
    "@types/node-schedule": "2.1.7",
    "eslint": "catalog:",
    "eslint-config": "workspace:*",
    "jest": "29.7.0",
    "lint-staged": "catalog:",
    "mongodb-memory-server": "8.12.0",
    "prettier": "catalog:",
    "prettier-config": "workspace:*",
    "ts-jest": "29.1.2",
    "tsconfig": "workspace:*",
    "tsx": "4.20.4",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "bash -c 'tsc --noEmit'",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
