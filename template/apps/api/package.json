{
  "name": "api",
  "version": "2.3.0",
  "description": "Koa api",
  "private": false,
  "main": "src/app",
  "author": "Paralect",
  "license": "MIT",
  "keywords": [
    "koa",
    "rest api",
    "paralect"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paralect/koa-api-starter.git"
  },
  "scripts": {
    "copy-assets": "mkdir -p \"dist/src/assets/emails\" && cp -R src/assets/emails/* dist/src/assets/emails/",
    "build": "run-s build:**",
    "build:tcs": "tsc",
    "build:email": "npm run copy-assets && mjml dist/src/assets/emails/*.mjml -o dist/src/assets/emails/dist/",
    "test": "run-s test:**",
    "test:lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "dev": "NODE_ENV=development APP_ENV=development nodemon --watch src -e ts,tsx --exec ts-node --project tsconfig.json src/app.ts",
    "start": "node dist/src/app.js",
    "migrate-dev": "NODE_ENV=development APP_ENV=development ts-node ./src/migrator.ts",
    "migrate": "node dist/src/migrator.js",
    "schedule-dev": "NODE_ENV=development APP_ENV=development nodemon --watch src -e ts,tsx --exec ts-node --project tsconfig.json ./src/scheduler.ts",
    "schedule": "node dist/src/scheduler.js",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@koa/cors": "3.1.0",
    "@koa/multer": "3.0.0",
    "@koa/router": "10.1.1",
    "@paralect/node-mongo": "3.1.1",
    "@sendgrid/mail": "7.6.1",
    "@socket.io/redis-adapter": "7.2.0",
    "@socket.io/redis-emitter": "4.1.1",
    "aws-sdk": "2.1080.0",
    "bcryptjs": "2.4.3",
    "dotenv": "16.0.3",
    "google-auth-library": "8.5.1",
    "handlebars": "4.7.7",
    "koa": "2.13.4",
    "koa-bodyparser": "4.3.0",
    "koa-compose": "4.1.0",
    "koa-helmet": "6.1.0",
    "koa-logger": "3.2.1",
    "koa-mount": "4.0.0",
    "koa-qs": "3.0.0",
    "lodash": "4.17.21",
    "mjml": "4.12.0",
    "module-alias": "2.2.2",
    "moment": "2.29.1",
    "moment-duration-format": "2.3.2",
    "multer": "1.4.4",
    "node-schedule": "2.1.0",
    "nodemon": "2.0.15",
    "psl": "1.8.0",
    "redis": "4.0.6",
    "socket.io": "4.5.2",
    "ts-node": "10.7.0",
    "winston": "3.6.0",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/koa": "2.13.4",
    "@types/koa__cors": "3.1.1",
    "@types/koa__multer": "2.0.4",
    "@types/koa__router": "8.0.11",
    "@types/koa-bodyparser": "4.3.7",
    "@types/koa-helmet": "6.0.4",
    "@types/koa-logger": "3.1.2",
    "@types/koa-mount": "4.0.1",
    "@types/koa-qs": "2.0.0",
    "@types/lodash": "4.14.180",
    "@types/module-alias": "2.0.1",
    "@types/node": "18.7.15",
    "@types/node-schedule": "1.3.2",
    "@types/psl": "1.1.0",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "eslint": "8.23.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.25.4",
    "lint-staged": "12.3.4",
    "npm-run-all": "4.1.5",
    "typescript": "4.8.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
