{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**", "public/dist/**"],
      "dependsOn": ["^build"]
    },
    "mailer#build": {
      "cache": false
    },
    "api#migrate-dev": {
      "dependsOn": ["mailer#build"],
      "cache": false
    },
    "api#schedule-dev": {
      "dependsOn": ["mailer#build", "api#migrate-dev"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["mailer#build"],
      "cache": false
    },
    "development": {
      "dependsOn": ["api#migrate-dev", "api#schedule-dev", "dev"],
      "cache": false
    },
    "precommit": {
      "outputs": []
    }
  }
}
