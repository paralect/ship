{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": ".",
    "target": "es2017",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": { "*": ["*"] },
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "ts-node": { "transpileOnly": true },
  "exclude": []
}
